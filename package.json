{
  "name": "vscode-css-vars",
  "version": "0.0.6",
  "description": "VSCode extension for CSS var and env autocomplete",
  "keywords": [
    ""
  ],
  "license": "MIT",
  "repository": "lasalefamine/vscode-css-vars",
  "engines": {
    "vscode": "^1.64.0",
    "node": ">=12"
  },
  "author": {
    "name": "Alessio Occhipinti (@lasalefamine)",
    "email": "info@godev.space",
    "url": "https://godev.space"
  },
  "publisher": "LasaleFamine",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:postcss"
  ],
  "contributes": {
    "configuration": {
      "title": "CSS Variables Autocomplete (var and env)",
      "properties": {
        "cssEnvVarsAutocomplete.varFiles": {
          "type": "array",
          "description": "Array of paths to files with css variables (var(--)"
        },
        "cssEnvVarsAutocomplete.envFiles": {
          "type": "array",
          "description": "Array of paths to files with css env variables (env(--)"
        },
        "cssEnvVarsAutocomplete.languageModes": {
          "type": "array",
          "description": "Custom language modes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn build",
    "dev": "ts-node src/index",
    "build": "del-cli dist && tsc",
    "lint": "eslint . --ext ts",
    "test": "tsc --noEmit && jest --coverage",
    "release": "git pull && standard-version && git push --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "dependencies": {
    "css": "3.0.0",
    "flat": "5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@lasalefamine/eslint-config-base": "1.2.1",
    "@lasalefamine/tsconfig": "0.1.0",
    "@types/css": "0.0.33",
    "@types/flat": "5.0.2",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.17",
    "@types/vscode": "1.64.0",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "del-cli": "4.0.1",
    "eslint": "8.9.0",
    "eslint-plugin-import": "2.25.4",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "rimraf": "3.0.2",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.5.0",
    "typescript": "4.5.5"
  },
  "files": [
    "dist/src",
    "!dist/__tests__",
    "!*.test.*"
  ],
  "main": "dist/extension.js",
  "types": "dist",
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "dist/src",
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
